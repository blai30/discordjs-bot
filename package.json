{
  "name": "discordjs-bot",
  "version": "1.0.0",
  "description": "Discord bot using Discord.JS and TypeScript.",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "tsc -p tsconfig.release.json && node dist/src/index.js",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "dev": "SET NODE_ENV=development&&nodemon --exec ts-node --files src/index.ts",
    "prod": "NODE_ENV=production&&npm start"
  },
  "author": "Brian Lai <brianlai30@outlook.com>",
  "license": "ISC",
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "tslib": "^2.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsutils": "^3.19.1",
    "typescript": "^4.1.3"
  }
}
